<div class="p-12">
<h2 class="font-bold text-3xl pb-2">Ironhack Cinema</h2>
<p class="text-xl pb-9">Click on the movie to check the showtimes!</p>
<div class="grid grid-cols-3 justify-normal gap-6">
{{#each movies}}
  <div class="flex flex-col items-center p-4">

    <img class="object-scale-down w-auto h-auto m-auto shadow-xl" src="{{image}}" alt="{{title}} image" />
    <h3 class="p-2 font-bold">{{title}}</h3>
    <a class="underline text-blue-400"href="/movie/{{id}}">See more</a>
  </div>
{{/each}}
</div>
</div>